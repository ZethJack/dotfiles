################
# SXHKD Config #
################

# keychords
# super + e {e, s, v, j, m}
#   {emacsclient -c -a emacs, subl, vscodium, joplin-desktop, meld}

# it is possible to state multiple bindings on single line see example below			
# super + {_,alt + }t
#	  {thunar, thunderbird}

#Screenshot tool
Print
  maim ~/Pics/Screenshots/pic-full$(date '+%y%m%d-%H%M-%S').png

shift + Print
  maimpick

#Restart sxhkd
super + shift + x
  pkill -USR1 -x sxhkd && notify-send "Sxhkd config" "Reloaded."

# super + F1
# super + F2
# run display select tool
super + F3
  displayselect

# Open pulsemixer
super + F4
  alacritty -e pulsemixer

# super + F5
# Torrent client
super + F6
  torwrap

# toggle torrent daemon
super + F7
  td-toggle

# Synchronize mail
super + F8
  mailsync

# Mount a device manually
super + F9
  dmenumount

# Manually unmount device
super + F10
  dmenuumount

# toggle webcam recording?
# super + F11
# 	mpv --no-cache --no-osc --no-input-default-bindings --input-conf=/dev/null --title=webcam $(ls /dev/video[0,2,4,6,8] | tail -n 1

# dmenuunicode - select emoji to copy to clipboard
super + semicolon
  dmenuunicode

# Sysact script to lock, restart, sleep, shutdown etc
super + BackSpace
  sysact

#Web browser
super {_, shift +} w
  {brave, alacritty -e sudo nmtui}

# Email and abook
super {_, shift + }e
  {alacritty -e neomutt; rmdir ~/.abook, alacritty -e abook -C ~/.config/abook/abookrc --datafile ~/.config/abook/addressbook}

# Open file manager
super + r; {r,t}
  {alacritty -e lfub, pcmanfm}

# Launch htop
super + shift + r
  alacritty -e htop

# Launch emacsclient
super + i
  emacsclient -c -a 'Emacs'

# Toggle compositor
super + o
  comptoggle

# Pause mpd & mpv
super + {_, shift + }p
  mpc {pause, pause ; pauseallmpv}

super + {_, shift + }uacute
  mpc seek {-10, -60}

super + {_, shift + }parenright
  mpc seek {+10; +60}

# open passmenu
ctrl + alt + p
  passmenu ~/.local/share/password-store/

# Rofi for apps and all apps
super + {_, shift + }d
  rofi -show {drun -show-icons,run}

# vimwiki notes and newsboat
super + {_, shift + }n
  alacritty -e {nvim +VimwikiIndex, newsboat}

# Music player
super + m
  alacritty -e ncmpcpp
