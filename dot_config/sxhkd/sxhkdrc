################
# SXHKD Config #
################

# keychords
# super + e {e, s, v, j, m}
#   {emacsclient -c -a emacs, subl, vscodium, joplin-desktop, meld}

# it is possible to state multiple bindings on single line see example below			
# super + {_,alt + }t
#	  {thunar, thunderbird}

#Restart sxhkd
super + shift + x
  pkill -USR1 -x sxhkd && notify-send "Sxhkd config" "Reloaded."

# Sysact script to lock, restart, sleep, shutdown etc
super + BackSpace
  sysact

#Web browser
super {_, shift +} w
  {librewolf, alacritty -e sudo nmtui}

# Email and abook
super {_, shift + }e
  {alacritty -e neomutt; rmdir ~/.abook, alacritty -e abook -C ~/.config/abook/abookrc --datafile ~/.config/abook/addressbook}

# Open file manager
super + r; {r,t}
  {alacritty -e lfub, pcmanfm}

# Launch htop
super + shift + r
  alacritty -e htop

# Launch emacsclient
super + i
  emacsclient -c -a 'Emacs'

# Toggle compositor
super + o
  comptoggle

# Pause mpd & mpv
super + {_, shift + }p
  mpc {pause, pause ; pauseallmpv}

super + {_, shift + }uacute
  mpc seek {-10, -60}

super + {_, shift + }parenright
  mpc seek {+10; +60}

# open passmenu
ctrl + alt + p
  passmenu ~/.local/share/password-store/

# Rofi for apps and all apps
super + {_, shift + }d
  rofi -show {drun -show-icons,run}

# vimwiki notes and newsboat
super + {_, shift + }n
  alacritty -e {nvim +VimwikiIndex, newsboat}

# Music player
super + m
  alacritty -e ncmpcpp
